
<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head %>

    <style type="text/css">
        .send-message-form {
            width: 540px;
            margin: 50px auto;
        }
        .send-message-form form {
            margin-bottom: 15px;
            background: #f7f7f7;
            box-shadow: 0px 2px 2px rgba(0, 0, 0, 0.3);
            padding: 30px;
        }
        .send-message-form h2 {
            margin: 0 0 15px;
        }
        .form-control, .btn {
            min-height: 38px;
            border-radius: 2px;
        }
        .form-control-textarea {
            width: 100%;
            min-height: 180px;
            border-radius: 2px;
        }
        .btn {        
            width: 80px;
            font-size: 15px;
            font-weight: bold;
        }
    </style>

</head>
<body class="container">

<header>
    <%- include('../partials/header', {authenticated:authenticated}) %>
</header>

<main>
    <div class="send-message-form">
        <form action="/send" method="post">
            <h2 class="text-center">Send Message</h2>       
            <div class="form-group">
                <input type="text" name="recipient" class="form-control" placeholder="Recipient" required="required">
            </div>
            <div class="form-group">
                <input type="text" name="subject" class="form-control" placeholder="Subject" required="required">
            </div>
            <div class="form-group">
                <textarea name="message" class="form-control-textarea" placeholder="Message" required="required"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Send</button>
            </div>
            <div>
                <% if(sendError) { %>
                    <%= sendErrorMessage %>
                <% } %>
            </div>
        </form>
    </div>

</main>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>

